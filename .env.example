# =============================================================================
# TRADINO UNSCHLAGBAR - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to GitHub!

# =============================================================================
# BITGET API CREDENTIALS
# =============================================================================
# Get these from: https://www.bitget.com/api-doc
BITGET_API_KEY=your_api_key_here
BITGET_SECRET_KEY=your_secret_key_here
BITGET_PASSPHRASE=your_passphrase_here

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Create bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Trading mode: 'demo' or 'live' (ALWAYS start with demo!)
TRADING_MODE=demo

# Default position settings
DEFAULT_POSITION_SIZE=100
DEFAULT_LEVERAGE=10
MAX_POSITIONS=3

# Risk management
MAX_DAILY_LOSS=500
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=4.0

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Database settings (optional)
DATABASE_URL=sqlite:///tradino.db

# Redis settings (optional)
REDIS_URL=redis://localhost:6379/0
